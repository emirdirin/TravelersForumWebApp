
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Travelers Forum</title>
    <link rel="stylesheet" href="/lib/bootstrap/css/bootstrap.min.css" />
    <style>
        :root {
            --primary-color: #f5f5f5; 
            --secondary-color: #37474f; 
            --accent-color: #ff7043; 
            --header-background: #0277bd; 
            --section-background: #e1f5fe; 
        }
        body {
            font-family: 'Arial', sans-serif;
            background-color: var(--primary-color);
            color: var(--secondary-color);
        }
        .navbar {
            background-color: var(--header-background);
        }
        .navbar a {
            color: white !important;
        }
        .navbar a:hover {
            color: var(--accent-color) !important;
        }
        .hero-section {
            background: linear-gradient(to right, var(--header-background), var(--accent-color));
            color: white;
            padding: 3rem 1rem;
            text-align: center;
        }
        .main-content {
            background-color: #ffffff;
            padding: 2rem;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .card:hover {
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
            transform: translateY(-5px);
        }
        .footer {
            background-color: var(--header-background);
            color: white;
            padding: 1rem 0;
            text-align: center;
        }
        .footer a {
            color: var(--accent-color);
        }
        .footer a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" href="/">Travelers Forum</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/Home/Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Adding/List">Destinations</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Adding/Index">Add More</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Contact/Index">Contact</a></li>
                    @if (!User.Identity.IsAuthenticated)
                    {
                        
                            <a href="@Url.Action("Login","Account")" class="btn btn-success">
                                Login
                            </a>
                        
                    }
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <form asp-action="Logout" asp-controller="Account" method="post">
                                <button button-type="submit" button-text="Logout" class="btn btn-danger"></button>
                            </form>
                        </li>
                    }
                    
                </ul>
            </div>
        </div>
    </nav>
    
    <div class="hero-section">
        @if (User.Identity.IsAuthenticated)
        {
            <h1>Welcome to Travelers Forum @User.Identity.Name </h1>
        }

        else
        {
            <h1>Welcome to Travelers Forum</h1>
        }

        <p>Your guide to TÃ¼rkiye's best travel locations</p>
    </div>
    <div class="container my-5 main-content">
        <div class="card">
            <div class="card-body">
                @RenderBody()
            </div>
        </div>
    </div>
    <footer class="footer">
        <p>&copy; 2024 Travelers Forum. All Rights Reserved.</p>
        <p>Follow us on:
            <a href="#">Facebook</a> |
            <a href="#">Twitter</a> |
            <a href="#">Instagram</a>
        </p>
    </footer>


    <script src="/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    @section Scripts {
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.0/dist/jquery.validate.unobtrusive.min.js"></script>
    }
</body>
</html>
